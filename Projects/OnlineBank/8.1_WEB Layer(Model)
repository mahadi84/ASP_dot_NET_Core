// =====================================================
// 7.1 RegisterVm
// =====================================================

/*
‡¶´‡¶æ‡¶á‡¶≤ ‡¶≤‡ßã‡¶ï‡ßá‡¶∂‡¶®:
src/OnlineBanking.Web/Models/RegisterVm.cs
*/

using System.ComponentModel.DataAnnotations; // Validation attributes (Required, StringLength, etc.)

namespace OnlineBanking.Web.Models;

public sealed class RegisterVm
{
    // ‡¶ó‡ßç‡¶∞‡¶æ‡¶π‡¶ï‡ßá‡¶∞ ‡¶®‡¶æ‡¶Æ ‡¶Ü‡¶¨‡¶∂‡ßç‡¶Ø‡¶ï
    // ‡¶∏‡¶∞‡ßç‡¶¨‡ßã‡¶ö‡ßç‡¶ö 100 character ‡¶Ö‡¶®‡ßÅ‡¶Æ‡ßã‡¶¶‡¶ø‡¶§
    [Required, StringLength(100)]
    public string Name { get; set; } = "";

    // Email ‡¶Ö‡¶¨‡¶∂‡ßç‡¶Ø‡¶á ‡¶¶‡¶ø‡¶§‡ßá ‡¶π‡¶¨‡ßá
    // Email format valid ‡¶ï‡¶ø‡¶®‡¶æ check ‡¶ï‡¶∞‡¶¨‡ßá
    // ‡¶∏‡¶∞‡ßç‡¶¨‡ßã‡¶ö‡ßç‡¶ö 200 character
    [Required, EmailAddress, StringLength(200)]
    public string Email { get; set; } = "";

    // ‡¶∂‡¶π‡¶∞‡ßá‡¶∞ ‡¶®‡¶æ‡¶Æ ‡¶Ü‡¶¨‡¶∂‡ßç‡¶Ø‡¶ï
    // ‡¶∏‡¶∞‡ßç‡¶¨‡ßã‡¶ö‡ßç‡¶ö 100 character
    [Required, StringLength(100)]
    public string City { get; set; } = "";

    // Password ‡¶Ö‡¶¨‡¶∂‡ßç‡¶Ø‡¶á ‡¶¶‡¶ø‡¶§‡ßá ‡¶π‡¶¨‡ßá
    // ‡¶ï‡¶Æ‡¶™‡¶ï‡ßç‡¶∑‡ßá 6 character, ‡¶∏‡¶∞‡ßç‡¶¨‡ßã‡¶ö‡ßç‡¶ö 100
    // (security baseline)
    [Required, MinLength(6), MaxLength(100)]
    public string Password { get; set; } = "";
}


// =====================================================
// 7.2 LoginVm
// =====================================================

/*
‡¶´‡¶æ‡¶á‡¶≤ ‡¶≤‡ßã‡¶ï‡ßá‡¶∂‡¶®:
src/OnlineBanking.Web/Models/LoginVm.cs
*/

using System.ComponentModel.DataAnnotations;

namespace OnlineBanking.Web.Models;

public sealed class LoginVm
{
    // Account number ‡¶Ü‡¶¨‡¶∂‡ßç‡¶Ø‡¶ï
    // ‡¶†‡¶ø‡¶ï ‡ß´ ‡¶°‡¶ø‡¶ú‡¶ø‡¶ü ‡¶π‡¶§‡ßá ‡¶π‡¶¨‡ßá (MinimumLength = 5, MaximumLength = 5)
    [Required, StringLength(5, MinimumLength = 5)]
    public string AccountNumber { get; set; } = "";

    // Password field ‡¶Ü‡¶¨‡¶∂‡ßç‡¶Ø‡¶ï
    // format validation ‡¶è‡¶ñ‡¶æ‡¶®‡ßá ‡¶ï‡¶∞‡¶æ ‡¶π‡ßü‡¶®‡¶ø (AuthService verify ‡¶ï‡¶∞‡¶¨‡ßá)
    [Required]
    public string Password { get; set; } = "";
}


// =====================================================
// 7.3 AmountVm (Deposit / Withdraw)
// =====================================================

/*
‡¶´‡¶æ‡¶á‡¶≤ ‡¶≤‡ßã‡¶ï‡ßá‡¶∂‡¶®:
src/OnlineBanking.Web/Models/AmountVm.cs
*/

using System.ComponentModel.DataAnnotations;

namespace OnlineBanking.Web.Models;

public sealed class AmountVm
{
    // Amount ‡¶¶‡ßá‡¶ì‡ßü‡¶æ ‡¶¨‡¶æ‡¶ß‡ßç‡¶Ø‡¶§‡¶æ‡¶Æ‡ßÇ‡¶≤‡¶ï
    [Required]

    // Amount ‡¶Ö‡¶¨‡¶∂‡ßç‡¶Ø‡¶á 0.01 ‡¶è‡¶∞ ‡¶¨‡ßá‡¶∂‡¶ø ‡¶π‡¶§‡ßá ‡¶π‡¶¨‡ßá
    // upper limit ‡¶∞‡¶æ‡¶ñ‡¶æ ‡¶π‡ßü‡ßá‡¶õ‡ßá overflow/fraud ‡¶∞‡ßã‡¶ß‡ßá‡¶∞ ‡¶ú‡¶®‡ßç‡¶Ø
    [Range(0.01, 100000000)]
    public decimal Amount { get; set; }
}


// =====================================================
// 7.4 TransferVm
// =====================================================

/*
‡¶´‡¶æ‡¶á‡¶≤ ‡¶≤‡ßã‡¶ï‡ßá‡¶∂‡¶®:
src/OnlineBanking.Web/Models/TransferVm.cs
*/

using System.ComponentModel.DataAnnotations;

namespace OnlineBanking.Web.Models;

public sealed class TransferVm
{
    // Receiver account number
    // ‡¶†‡¶ø‡¶ï ‡ß´ ‡¶°‡¶ø‡¶ú‡¶ø‡¶ü ‡¶π‡¶§‡ßá ‡¶π‡¶¨‡ßá
    [Required, StringLength(5, MinimumLength = 5)]
    public string ToAccountNumber { get; set; } = "";

    // Transfer amount
    // minimum 0.01, maximum 100,000,000
    [Required]
    [Range(0.01, 100000000)]
    public decimal Amount { get; set; }
}


