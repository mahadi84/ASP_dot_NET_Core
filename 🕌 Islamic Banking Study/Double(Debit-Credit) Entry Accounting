### C# ржХрзЛржб ржЙржжрж╛рж╣рж░ржг: Double Entry Logic

```csharp
public class TransactionService
{
    private readonly AppDbContext _context;

    public TransactionService(AppDbContext context)
    {
        _context = context;
    }

    public async Task<bool> ExecuteTransaction(int fromAccountId, int toAccountId, decimal amount)
    {
        // рзз. ржбрж╛ржЯрж╛ржмрзЗрж╕ ржЯрзНрж░рж╛ржиржЬрзНржпрж╛ржХрж╢ржи рж╢рзБрж░рзБ ржХрж░рж╛ (Atomicity ржирж┐рж╢рзНржЪрж┐ржд ржХрж░рждрзЗ)
        using var dbTransaction = await _context.Database.BeginTransactionAsync();

        try
        {
            // рзи. ржбрзЗржмрж┐ржЯ ржПржирзНржЯрзНрж░рж┐ (ржпрзЗржЦрж╛ржи ржерзЗржХрзЗ ржЯрж╛ржХрж╛ ржмрзЗрж░ рж╣ржЪрзНржЫрзЗ - Asset/Cash ржХржоржЫрзЗ)
            var debitEntry = new LedgerEntry
            {
                AccountId = fromAccountId,
                DebitAmount = amount,
                CreditAmount = 0,
                Description = "Fund Transfer - Out",
                CreatedAt = DateTime.Now
            };

            // рзй. ржХрзНрж░рзЗржбрж┐ржЯ ржПржирзНржЯрзНрж░рж┐ (ржпрзЗржЦрж╛ржирзЗ ржЯрж╛ржХрж╛ ржврзБржХржЫрзЗ - Liability/Deposit ржмрж╛рзЬржЫрзЗ)
            var creditEntry = new LedgerEntry
            {
                AccountId = toAccountId,
                DebitAmount = 0,
                CreditAmount = amount,
                Description = "Fund Transfer - In",
                CreatedAt = DateTime.Now
            };

            // ржбрж╛ржЯрж╛ржмрзЗрж╕рзЗ ржПржирзНржЯрзНрж░рж┐ржЧрзБрж▓рзЛ ржпрзЛржЧ ржХрж░рж╛
            _context.LedgerEntries.Add(debitEntry);
            _context.LedgerEntries.Add(creditEntry);

            // рзк. ржПржХрж╕рж╛ржерзЗ рж╕рзЗржн ржХрж░рж╛
            await _context.SaveChangesAsync();

            // рзл. рж╕ржм ржарж┐ржХ ржерж╛ржХрж▓рзЗ ржХржорж┐ржЯ ржХрж░рж╛ (рж╕ржм ржбрж╛ржЯрж╛ ржкрж╛рж░ржорж╛ржирзЗржирзНржЯрж▓рж┐ рж╕рзЗржн рж╣ржмрзЗ)
            await dbTransaction.CommitAsync();
            
            return true;
        }
        catch (Exception ex)
        {
            // рзм. ржпржжрж┐ ржХрзЛржирзЛ ржПржХржЯрж┐рждрзЗ ржПрж░рж░ рж╣рзЯ, рждржмрзЗ ржкрзБрж░рзЛ рж▓рзЗржиржжрзЗржи ржмрж╛рждрж┐рж▓ (Rollback) рж╣ржмрзЗ
            // ржПрждрзЗ GL Mismatch рж╣ржУрзЯрж╛рж░ рж╕рзБржпрзЛржЧ ржерж╛ржХржмрзЗ ржирж╛
            await dbTransaction.RollbackAsync();
            Console.WriteLine($"Transaction Failed: {ex.Message}");
            return false;
        }
    }
}

```

