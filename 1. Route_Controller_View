
## Menu:   

01. <a asp-route="Product1">Home</a> 
Note: Using asp-route="AllProducts" is the best practice.

02.<a
asp-area=""
asp-controller="Product1"    //Directs the request to the Product1Controller.
asp-action="ShowAll"         //Directs the request to the ShowAll() method within the ProductController.
>Home</a>


############## Route(Program.cs) ##############
app.MapControllerRoute(name:"Test",  pattern: "{controller=Test}/{action=ShowAll}" );



############ View ##############
@{
    ViewData["Title"] = "Home Page";
}
        @model string
        @Model 

            <h1>@ViewBag.message</h1>
                <h1>@ViewBag[message]</h1>

 @* The form points to the POST version of the Create action *@
 <form asp-action="CreateUser" asp-controller="Home" method="post">
     
     @Html.AntiForgeryToken()  @* Important for security against Cross-Site Request Forgery (CSRF) *@

     <div class="form-group">
         <label asp-for="name" class="control-label"></label>
         <input asp-for="name" class="form-control" />
         <span asp-validation-for="name" class="text-danger"></span>
     </div>    

     <div class="form-group mt-4">
         <input type="submit" value="Create" class="btn btn-success" />
         <a asp-action="User" class="btn btn-secondary ml-2">Back to List</a>
     </div>
 </form>



############ Model ##############
namespace test.Models
{
    public class LoginModel
    {
        [Required(ErrorMessage = "Username is required.")]
        public string Username { get; set; }

        [Required(ErrorMessage = "Password is required.")]
        [StringLength(100, MinimumLength = 6, ErrorMessage = "Password must be at least 6 characters long.")]
        public string Password { get; set; }

    }
}

############ Controller ##############
public class Test : Controller{
    // GET: Test
    public ActionResult ShowAll()
    {
         // 1. Using ViewBag:
        ViewBag.Message = "We successfully retrieved 3 products."; //Autometically pass it to view only call in the view @ViewBag.Message 

        // 2. Using ViewData
        ViewData["Message"] = DateTime.Now.ToShortTimeString(); ///Autometically pass it to view only call in the view @ViewData[Message] 

        //3. Using Model
        string message = "Hello! This text is returned directly.";
       //return View(model:message); //pass data using model is best practice

       // return Content("We successfully retrieved 3 products."); // To show text on the brower
       //return Content(message);
    }

        [HttpPost]
        public IActionResult ShowData(LoginModel m)
        {
            // Check if the model conforms to the validation rules (Data Annotations).
            if (!ModelState.IsValid) {        
                return View("login", m); //if validation fails, forward to login page with error message automatically carried back to the view.
            }        
            return View("Index", m);  // If validation succeeds:
        }

}







