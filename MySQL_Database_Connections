            public class User
                    {
                        public int Id { get; set; }
                        public string Username { get; set; }
                        public string PasswordHash { get; set; } // ‡¶π‡ßç‡¶Ø‡¶æ‡¶∂‡¶° ‡¶™‡¶æ‡¶∏‡¶ì‡¶Ø‡¶º‡¶æ‡¶∞‡ßç‡¶° ‡¶∏‡¶Ç‡¶∞‡¶ï‡ßç‡¶∑‡¶£‡ßá‡¶∞ ‡¶ú‡¶®‡ßç‡¶Ø
