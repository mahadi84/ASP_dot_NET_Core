    public HomeController(ApplicationDbContext context) // Dependency Injection
    {
        _context = context;
    }

    public IActionResult Index()
    {
        // ржбрж╛ржЯрж╛ржмрзЗрж╕ ржерзЗржХрзЗ рж╕ржХрж▓ Item рж▓рзЛржб ржХрж░рж╛ рж╣ржЪрзНржЫрзЗ
